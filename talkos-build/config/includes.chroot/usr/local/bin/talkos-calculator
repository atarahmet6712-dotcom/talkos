#!/usr/bin/env python3
import tkinter as tk
from tkinter import messagebox

class TalkOSCalculator:
    def __init__(self, master):
        self.master = master
        master.title("TalkOS Hesap Makinesi")
        master.geometry("320x450")
        master.configure(bg="#1E293B")
        master.resizable(False, False)

        self.equation = ""
        
        # Display
        self.display_var = tk.StringVar()
        self.display = tk.Entry(master, textvariable=self.display_var, font=("Helvetica", 24, "bold"), 
                              bg="#0F172A", fg="#06B6D4", bd=0, justify="right")
        self.display.pack(fill=tk.BOTH, ipadx=8, ipady=20, pady=10)

        # Buttons Grid
        btn_frame = tk.Frame(master, bg="#1E293B")
        btn_frame.pack(fill=tk.BOTH, expand=True)

        buttons = [
            ('7', 1, 0), ('8', 1, 1), ('9', 1, 2), ('/', 1, 3),
            ('4', 2, 0), ('5', 2, 1), ('6', 2, 2), ('*', 2, 3),
            ('1', 3, 0), ('2', 3, 1), ('3', 3, 2), ('-', 3, 3),
            ('C', 4, 0), ('0', 4, 1), ('=', 4, 2), ('+', 4, 3)
        ]

        for (text, row, col) in buttons:
            btn = tk.Button(btn_frame, text=text, font=("Helvetica", 16, "bold"),
                           bg="#334155", fg="white", bd=0, activebackground="#06B6D4",
                           activeforeground="white", command=lambda t=text: self.on_click(t))
            btn.grid(row=row, column=col, sticky="nsew", padx=2, pady=2)

        for i in range(4):
            btn_frame.grid_columnconfigure(i, weight=1)
        for i in range(1, 5):
            btn_frame.grid_rowconfigure(i, weight=1)

    def on_click(self, char):
        if char == 'C':
            self.equation = ""
            self.display_var.set("")
        elif char == '=':
            try:
                result = str(eval(self.equation))
                self.display_var.set(result)
                self.equation = result
            except Exception as e:
                self.display_var.set("Hata")
                self.equation = ""
        else:
            self.equation += str(char)
            self.display_var.set(self.equation)

if __name__ == "__main__":
    root = tk.Tk()
    app = TalkOSCalculator(root)
    root.mainloop()
